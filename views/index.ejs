<%- include('partials/header') %>

<!-- MAIN CONTAINER -->
<div style="
  max-width: 650px; 
  margin: 40px auto; 
  background: #fff; 
  padding: 25px; 
  border-radius: 16px; 
  border: 1px solid #e6e6e6; 
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
">

  <!-- GREETING -->
  <div style="text-align: center; margin-bottom: 25px;">
    <h2 style="margin-bottom: 5px; font-size: 28px;">Hello <%= username %> ðŸ‘‹</h2>
    <p style="color: #777; font-size: 16px;">Welcome to your feed</p>
  </div>

  <!-- ACTION BUTTONS -->
  <div style="display: flex; justify-content: center; gap: 15px; margin-bottom: 25px;">

    <!-- Discover Users -->
    <a href="/users" 
      style="
        background: #0095f6; 
        color: white; 
        padding: 10px 18px; 
        border-radius: 8px; 
        text-decoration: none; 
        font-weight: 600;
        box-shadow: 0 2px 6px rgba(0,0,0,0.2);">
      Discover Users
    </a>

    <!-- Create New Post -->
    <a href="/posts/new" 
      style="
        background: #262626; 
        color: white; 
        padding: 10px 18px; 
        border-radius: 8px; 
        text-decoration: none; 
        font-weight: 600;
        box-shadow: 0 2px 6px rgba(0,0,0,0.2);">
      Create New Post
    </a>

  </div>

  <!-- POSTS FEED -->
  <div>
    <%- include('posts') %>
  </div>

  <!-- LOGOUT -->
  <div style="text-align: center; margin-top: 30px;">
    <%- include('logout') %>
  </div>

</div>

<script src="/js/postActions.js"></script>
<%- include('partials/footer') %>
