<%- include('partials/header') %>

<div class="container" 
     style="
        max-width: 420px;
        margin-top: 60px;
        background: #ffffff;
        padding: 35px 40px;
        border-radius: 14px;
        border: 1px solid #dbdbdb;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        text-align: center;
     ">

    <h2 style="
        font-size: 28px;
        margin-bottom: 25px;
        font-weight: 600;
        color: #262626;
    ">
        Login
    </h2>

    <form action="/auth/login" method="POST" style="text-align: left;">

        <div class="mb-3" style="margin-bottom: 18px;">
            <label for="username" class="form-label" 
                style="font-weight: 500; color: #444; font-size: 14px;">
                Username
            </label>

            <input type="text" class="form-control" id="username" name="username" required
                style="
                    width: 100%;
                    padding: 10px 12px;
                    border: 1px solid #ccc;
                    border-radius: 8px;
                    font-size: 15px;
                    transition: 0.2s;
                "
                onfocus="this.style.borderColor='#3897f0';"
                onblur="this.style.borderColor='#ccc';"
            >
        </div>

        <div class="mb-3" style="margin-bottom: 20px;">
            <label for="password" class="form-label" 
                style="font-weight: 500; color: #444; font-size: 14px;">
                Password
            </label>

            <input type="password" class="form-control" id="password" name="password" required
                style="
                    width: 100%;
                    padding: 10px 12px;
                    border: 1px solid #ccc;
                    border-radius: 8px;
                    font-size: 15px;
                    transition: 0.2s;
                "
                onfocus="this.style.borderColor='#3897f0';"
                onblur="this.style.borderColor='#ccc';"
            >
        </div>

        <button type="submit" 
            style="
                width: 100%;
                padding: 10px;
                background: #3897f0;
                border: none;
                border-radius: 8px;
                font-size: 16px;
                color: white;
                font-weight: 600;
                margin-top: 5px;
                cursor: pointer;
                transition: 0.2s;
            "
            onmouseover="this.style.background='#3181d6';"
            onmouseout="this.style.background='#3897f0';"
        >
            Login
        </button>
    </form>

    <p class="mt-3" style="margin-top: 20px; font-size: 14px; color: #555;">
        Don't have an account?  
        <a href="/auth/register" 
           style="color: #3897f0; text-decoration: none; font-weight: 500;">
            Register here
        </a>.
    </p>
</div>

<%- include('partials/footer') %>
