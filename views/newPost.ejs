<%- include('partials/header') %>

<div class="container" style="margin-top: 50px; max-width: 500px;">
    <div style="
        background: #fff;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    ">
        <h2 style="font-weight: 600; margin-bottom: 20px;">New Post</h2>

        <form action="/posts/new" method="POST">
            <div class="mb-3" style="margin-bottom: 20px;">
                <label for="postTitle" class="form-label" style="font-weight: 500;">Title</label>
                <input type="text"
                    class="form-control"
                    id="postTitle"
                    name="postTitle"
                    required
                    style="border-radius: 8px; padding: 10px;">
            </div>

            <div class="mb-3" style="margin-bottom: 20px;">
                <label for="content" class="form-label" style="font-weight: 500;">Content</label>
                <input type="text"
                    class="form-control"
                    id="content"
                    name="content"
                    required
                    style="border-radius: 8px; padding: 10px;">
            </div>

            <button type="submit"
                class="btn btn-primary"
                style="width: 100%; padding: 10px; font-weight: 600; border-radius: 8px;">
                Upload
            </button>
        </form>
    </div>
</div>

<%- include('partials/footer') %>
