<style>
  body {
    background: #f0f2f5;
    font-family: Arial, sans-serif;
  }

  .chat-container {
    width: 600px;
    margin: 40px auto;
    background: white;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    overflow: hidden;
  }

  .chat-header {
    background: linear-gradient(135deg, #4c6ef5, #5f8bff);
    color: white;
    padding: 18px 24px;
    font-size: 22px;
    font-weight: bold;
  }

  #messages {
    height: 420px;
    overflow-y: auto;
    padding: 20px;
    background: #eef2f7;
  }

  .msg {
    margin-bottom: 16px;
    max-width: 80%;
    padding: 10px 14px;
    border-radius: 12px;
    line-height: 1.4;
  }

  .msg-user {
    background: #4c6ef5;
    color: white;
    margin-left: auto;
    border-bottom-right-radius: 2px;
  }

  .msg-other {
    background: white;
    color: #333;
    border-bottom-left-radius: 2px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  .msg strong {
    font-size: 14px;
    opacity: 0.8;
  }

  .chat-input-area {
    display: flex;
    padding: 14px;
    background: #fff;
    border-top: 1px solid #ddd;
  }

  #messageInput {
    flex: 1;
    padding: 12px 14px;
    border: 1px solid #ccc;
    border-radius: 30px;
    outline: none;
    font-size: 16px;
  }

  #sendButton {
    margin-left: 10px;
    padding: 10px 20px;
    border: none;
    background: #4c6ef5;
    color: white;
    font-size: 16px;
    border-radius: 30px;
    cursor: pointer;
    transition: 0.2s;
  }

  #sendButton:hover {
    background: #3a57d9;
  }

  .timestamp {
  font-size: 12px;
  margin-left: 8px;
  opacity: 0.7;
}

</style>

<div class="chat-container">

  <div class="chat-header">
    Chat Room
  </div>

  <div id="messages">
    <% messages.forEach(message => { %>
    <div class="msg <%= message.sender._id.toString() === userId ? 'msg-user' : 'msg-other' %>">
      <strong><%= message.sender.username %></strong>
      <span class="timestamp"><%= new Date(message.createdAt).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %></span>
      <br>
      <%= message.content %>
    </div>
    <% }) %>
  </div>


  <div class="chat-input-area">
    <input autocomplete="off" id="messageInput" placeholder="Type a message...">
    <button id="sendButton">Send</button>
  </div>

</div>


<script>
  const CHAT_ID = "<%= chat._id %>";
  const USER_ID = "<%= userId %>";
</script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/chat.js"></script>